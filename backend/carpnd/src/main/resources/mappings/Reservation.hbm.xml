<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field"
                   default-cascade="save-update">
    <class name="model.Reservation">

        <id column="id" name="id">
            <generator class="native" />
        </id>


        <many-to-one name="publicationSnapshot" class="model.ReservedPublication"
                     column="publicationSnapshot_Reserva" unique="true"
                     cascade="all" lazy="false" />


        <many-to-one name="customer" class="model.User" lazy="false"
                     column="reservation_customer" not-null="false" />

        <many-to-one name="publication" class="model.Publication" lazy="false"
                     column="reservation_publication" not-null="true" />

        <many-to-one name="state" class="model.ReservationState"
                     column="state_Reserva" unique="true"
                     cascade="all" lazy="false" />




        <!--<one-to-one name="state" class="model.ReservationState"/>-->

        <!--<one-to-one name="publicationSnapshot" lazy="false" class="model.ReservedPublication"/>-->


    </class>
</hibernate-mapping>

